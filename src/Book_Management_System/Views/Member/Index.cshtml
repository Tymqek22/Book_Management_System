@model List<Domain.Entities.Member>

@{
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model) {

                <tr>
                    <td>@member.FirstName</td>
                    <td>@member.LastName</td>
                    <td>@member.Email</td>
                    <td>@member.Phone</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-controller="Member" asp-route-id="@member.Id">Details</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Member" 
                        asp-route-id="@member.Id" onclick="return confirm('Are you sure, you want to delete member: @member.FirstName @member.LastName')">Delete</a>
                        <a class="btn btn-outline-secondary" asp-action="Update" asp-controller="Member" asp-route-id="@member.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn-light" asp-action="Register" asp-controller="Member">Add Member</a>
</div>
