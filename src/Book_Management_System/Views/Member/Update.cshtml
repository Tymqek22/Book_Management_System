@model Domain.Entities.Member;

@{
}

<form method="post" asp-action="Update" asp-controller="Member">
	<div class="mt-3">
		<label class="form-label" for="FirstName">First Name</label>
		<input class="form-control" type="text" asp-for="FirstName" />
	</div>

	<div class="mt-3">
		<label class="form-label" for="LastName">Last Name</label>
		<input class="form-control" type="text" asp-for="LastName" />
	</div>

	<div class="mt-3">
		<label class="form-label" for="Email">Email</label>
		<input class="form-control" type="email" asp-for="Email" />
	</div>

	<div class="mt-3">
		<label class="form-label" for="Phone">Phone</label>
		<input class="form-control" type="tel" asp-for="Phone" />
	</div>

	<input class="btn btn-success" type="submit" value="Save Changes" />
</form>