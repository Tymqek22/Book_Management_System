@model Book_Management_System.ViewModels.MemberViewModel

@{
}
<div class="text-center mb-5">
	<div class="card-title">
		<h3>@Model.Member.FirstName @Model.Member.LastName</h3>
	</div>
</div>

<div class="album py-5 bg-light">
	<div class="container">
		<div class="row">
			@foreach (var borrowRecord in Model.BorrowRecords) {

				<div class="col-md-4">
					<div class="card mb-4 box-shadow">
						<div class="card-header">
							<h3>@borrowRecord.Book.Title</h3>
						</div>
						<div class="card-body">
							<dl>
								<dt class="badge bg-dark">Author</dt>
								<dd>
									<strong>@borrowRecord.Book.Author</strong>
								</dd>
								<dt class="badge bg-dark">End Date</dt>
								<dd>@borrowRecord.EndDate.ToShortDateString()</dd>
								<dt class="badge bg-dark">Status</dt>
								<dd>
									@if (borrowRecord.IsActive) {
										<span class="badge bg-success">Active</span>
									}
									else {
										<span class="badge bg-danger">Inactive</span>
									}
								</dd>
							</dl>
						</div>
					</div>
				</div>
			}
		</div>

	</div>
</div>
