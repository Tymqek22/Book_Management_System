@model Domain.Entities.Member

@{
}

<form method="post" asp-action="Register" asp-controller="Member">
	<div class="mt-3">
		<label class="form-label" for="FirstName">First Name</label>
		<input class="form-control" type="text" asp-for="FirstName" />
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>

	<div class="mt-3">
		<label class="form-label" for="LastName">Last Name</label>
		<input class="form-control" type="text" asp-for="LastName" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>

	<div class="mt-3">
		<label class="form-label" for="Email">Email</label>
		<input class="form-control" type="email" asp-for="Email" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="mt-3">
		<label class="form-label" for="Phone">Phone</label>
		<input class="form-control" type="tel" asp-for="Phone" />
		<span asp-validation-for="Phone" class="text-danger"></span>
	</div>

	<input class="btn btn-success" type="submit" value="Register"/>
</form>
