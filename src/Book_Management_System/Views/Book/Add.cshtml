@model Domain.Entities.Book;

@{
}

<form method="post" asp-action="Add" asp-controller="Book">
	<div class="mt-3">
		<label class="form-label" for="Title">Title</label>
		<input class="form-control" type="text" asp-for="Title" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	
	<div class="mt-3">
		<label class="form-label" for="Author">Author</label>
		<input class="form-control" type="text" asp-for="Author" />
		<span asp-validation-for="Author" class="text-danger"></span>
	</div>
	
	<div class="mt-3">
		<label class="form-label" for="Language">Language</label>
		<input class="form-control" type="text" asp-for="Language" />
		<span asp-validation-for="Language" class="text-danger"></span>
	</div>

	<div class="mt-3">
		<label class="form-label" for="Quantity">Quantity</label>
		<input class="form-control" type="number" asp-for="Quantity" />
		<span asp-validation-for="Quantity" class="text-danger"></span>
	</div>
	
	<input type="hidden" asp-for="IsAvailable" value="false" />
	<div class="mt-3">
		<input class="btn btn-outline-dark" type="submit" value="Add"/>
	</div>
	
</form>