@model Domain.Entities.Book

@{
}

<form method="post" asp-action="Edit" asp-controller="Book">
	<div class="mt-3">
		<label class="form-label" for="Title">Title</label>
		<input class="form-control" type="text" asp-for="Title" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>

	<div class="mt-3">
		<label class="form-label" for="Author">Author</label>
		<input class="form-control" type="text" asp-for="Author" />
		<span asp-validation-for="Author" class="text-danger"></span>
	</div>

	<div class="mt-3">
		<label class="form-label" for="GenreId">Genre</label>
		<select asp-for="GenreId" asp-items="@ViewBag.Genres">
			<option value="--Select genre--"></option>
		</select>
	</div>

	<div class="mt-3">
		<label class="form-label" for="Language">Language</label>
		<input class="form-control" type="text" asp-for="Language" />
		<span asp-validation-for="Language" class="text-danger"></span>
	</div>

	<div class="mt-3">
		<label class="form-label" for="Quantity">Quantity</label>
		<input class="form-control" type="number" asp-for="Quantity" />
		<span asp-validation-for="Quantity" class="text-danger"></span>
	</div>

	<div class="mt-3">
		<input class="btn btn-outline-dark" type="submit" value="Save Changes" />
	</div>

</form>