@model List<Domain.Entities.BorrowRecord>

@{
}

<div class="container">
	@foreach (var borrowRecord in Model) {
		
		<div class="card-footer">
			<h3 class="text-center">@borrowRecord.Member.FirstName @borrowRecord.Member.LastName</h3>
		</div>
		<div class="card-body">
			<dl>
				<dt>Book</dt>
				<dd>@borrowRecord.Book.Title</dd>
				<dt>End Date</dt>
				<dd>@borrowRecord.EndDate.ToShortDateString()</dd>
			</dl>
		</div>


	}
</div>
